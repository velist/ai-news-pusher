{
  "version": 2,
  "name": "ai-news-pusher",
  "public": true,
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "docs",
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/news/(.*)",
      "destination": "/news/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}